<%doc>
    autohandler
</%doc>


<%flags>
    inherit = None
</%flags>


<%python scope="request">
    # Place to store args that will get passed (as keyword args) to the base 
    # layout template.
    args = {}
</%python>


<%method section>
    <%doc>
        Grab the content for a specified section. The section content will be
        stuffed into the appropriate section in the base layout template.
    </%doc>

    <%args>
        # Name of section to store content for.
        name
    </%args>

    <%python scope="init">
        args[name] = m.content()
    </%python>
</%method>


<%python>
    # Get layout component (region.myt)
    base_comp = m.fetch_next()
    # Get region component (e.g., portlandor.myt)
    region_comp = m.fetch_next()
    # Fill args dict by processing region component
    m.scomp(region_comp, **m.request_args)
    # Execute layout component, passing args
    m.comp(base_comp, **args)
</%python>
